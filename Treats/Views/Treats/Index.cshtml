@{
  Layout = "_Layout";
}

@using System.Security.Claims

@model IEnumerable<Treats.Models.Treat>

<h2>Here is your list of treats, @User.Identity.Name</h2>
<hr />
@if (Model.Any())
{
        @foreach (var listTreat in Model)
        {
            <li>@Html.ActionLink($"{listTreat.Description}", "Details", new { id = listTreat.TreatId })</li>
        }
}
else
{
    <p>No treats have been added yet!</p>
}

@Html.ActionLink("Create new", "Create")
